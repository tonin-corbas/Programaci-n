<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.MainController">
  <TableView fx:id="characterTable">
    <columns>
      <TableColumn fx:id="nameColumn" text="Nombre" />
      <TableColumn fx:id="surnameColumn" text="Apellido" />
      <TableColumn fx:id="brotherhoodColumn" text="Hermandad" />
      <TableColumn fx:id="ratingColumn" text="Calificación" />
    </columns>
  </TableView>
  <TextField fx:id="ratingFilterField" promptText="Filtrar por calificación" />
  <Button text="Filtrar" onAction="#handleFilter" />
  <Button text="Añadir Personaje" onAction="#openAddCharacterScreen" />
</VBox>
