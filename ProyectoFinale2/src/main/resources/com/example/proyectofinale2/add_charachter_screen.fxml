<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controller.AddCharacterController">
    <TextField fx:id="nameField" promptText="Nombre" />
    <TextField fx:id="surnameField" promptText="Apellido" />
    <TextField fx:id="brotherhoodField" promptText="Hermandad" />
    <TextField fx:id="ratingField" promptText="Calificación" />
    <Button text="Añadir" onAction="#handleAddCharacter" />
</VBox>
